import java.util.*;
class TCS{
    public static void main(String[] args){
        Scanner d=new Scanner(System.in);
        int n=d.nextInt();
        int nthterm=0;
        if(n%2==1){
            nthterm=2*(n/2);
        }else{
            nthterm=(n-1)/2;
        }
        System.out.println(nthterm);

    }
}
