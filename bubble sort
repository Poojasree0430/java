
import java.util.*;
public class Main{
    public static void main(String[] args){

        int a[]={3,7,2,8,1};
        int n=a.length;


        for(int i=0;i<n-1;i++){
            for(int j=0;j<n-1-i;j++){
                if(a[j]>a[j+1]){
                    int temp=a[j];
                    a[j]=a[j+1];
                    a[j+1]=temp;
                }}}

        System.out.print(Arrays.toString(a));

    }
}
